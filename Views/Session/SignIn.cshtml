@model recipesv2.ViewModels.Session.SignInViewModel
@{
    ViewBag.Title = "Sign in";
}

@using (Html.BeginForm("SignIn", "Session", FormMethod.Post))

{



    // Username
    @Html.LabelFor(m => m.Username, new { @class = "form-label" })
    <br>
    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger text-opacity-50 small" })
    @Html.TextBoxFor(m => m.Username, "", new { @class = "form-control" })

    // Password
    @Html.LabelFor(m => m.Password, new { @class = "form-label" })
    <br>
    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger text-opacity-50 small" })
    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

    <input type="submit" value="send" class="btn btn-primary">
}