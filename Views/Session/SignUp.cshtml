@model recipesv2.ViewModels.Session.SignUpViewModel;
@{
    ViewBag.Title = "Sign up";
}

@using (Html.BeginForm("SignUp", "Session", FormMethod.Post))
{
    // Username
    @Html.LabelFor(m => m.Username, new { @class = "form-label" })
    <br />
    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger text-opacity-50 small" })
    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })

    // Password
    @Html.LabelFor(m => m.Password, new { @class = "form-label" })
    <br />
    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger text-opacity-50 small", @type = "password" })
    @Html.PasswordFor(m => m.Password, new { @class = "form-control"})

    // Password confirmation
    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
    <br />
    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger text-opacity-50 small" })
    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })

    // E-mail
    @Html.LabelFor(m => m.Email, new { @class = "form-label" })
    <br />
    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger text-opacity-50 small" })
    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })

    // Full name
    @Html.LabelFor(m => m.Name, new { @class = "form-label" })
    <br />
    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger text-opacity-50 small" })
    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })

    // Date of birth
    @Html.LabelFor(m => m.DateOfBirth, new { @class = "form-label" })
    <br />
    @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger text-opacity-50 small " })
    @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control", type = "date" })

    <input type="submit" value="send">
}
